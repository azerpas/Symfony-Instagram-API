{% extends 'base.html.twig' %}

{% block title %}INSTAGUI{% endblock %}

{% block Navbar %}
    {{parent()}}
{% endblock %}
{% block Section %}
    <div class="container">
        <section class="section-padding">
            <div class="row">
                {% if peoples %}
                    <table class="table">
                        <thead>
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col">From</th>
                            <th scope="col">Ratio</th>
                            <th scope="col">Options</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for i in peoples|sort|reverse %}
                            <tr>
                                <td scope="row">
                                    {{ i.username }}
                                    {% if i.profilePic %}
                                        <a class="rounded float-right" href="{{ i.profilePic }}" target="_blank" ><img width="50" height="50" src="{{ i.profilePic }}" class="rounded float-right" alt="link"></a>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if i.origin %}
                                        {{ i.origin }}
                                    {% else %}
                                        No origin
                                    {% endif %}
                                </td>
                                <td>
                                    {% if i.ratio %}
                                        {{ i.ratio }}
                                    {% else %}
                                        No ratio
                                    {% endif %}
                                </td>
                                <td>
                                    <a target="_blank" href="https://www.instagram.com/{{ i.username }}"><i class="fa fa-external-link-square"></i> </a>
                                    <a><i class="fas fa-minus-circle text-danger" style="margin-left: 5px" onclick="people(this)"></i></a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                {% else %}
                    <div class="card">
                        <div class="alert alert-danger" role="alert">
                            No Instagram account found ! Please add one first by clicking below
                        </div>
                        <a href="profile"><button class="btn btn-success">Click here</button></a>
                    </div>
                {% endif %}
            </div>
        </section>
    </div>
{% endblock %}
{% block Footer %}
    {{parent()}}
{% endblock %}

